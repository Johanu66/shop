					<h1>Boutique</h1>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- end breadcrumb section -->

<!-- products -->
<div class="product-section mt-150 mb-150">
	<div class="container">

		<div class="row">
			<div class="col-md-12">
				<div class="product-filters">
					<ul>
						<%= link_to products_path do %><li class="<% if !@active %>active<% end %>">All</li><% end %>
                        <% @categories.each do |category| %>
                            <%= link_to filter_path(category) do %>
								<% if !category.category %>
									<li class="<% if @active==category.id %>active<% end %>" data-filter=".<%= category.name %>">
										<%= category.name %>
									</li>
								<% end %>
							<% end %>
							<% category.categories.each do |sub_category| %>
								<%= link_to filter_path(sub_category) do %><li class="<% if @active==sub_category.id %>active<% end %>" data-filter=".<%= sub_category.name %>"><%= sub_category.name %></li><% end %>
							<% end %>
                        <% end %>
					</ul>
				</div>
			</div>
		</div>

		<div class="row product-lists">
            <% @products.each do |product| %>
                <div class="col-lg-4 col-md-6 text-center strawberry">
                    <div class="single-product-item">
                        <div class="product-image m-auto">
                            <%= link_to product_path(product) do %><%= image_tag product.image.url if product.image.url && product.image %><% end %>
                        </div>
                        <h4><%= product.category.name %></h4>
                        <p class="product-price"><span><%= product.name %></span> <%= product.price %> FCFA</p>
                        <%= link_to add_cart_path(product_id: product.id), class: "cart-btn" do  %><i class="fas fa-shopping-cart"></i> Add to Cart<% end %>
                    </div>
                </div>
            <% end %>
		</div>

		<!--<div class="row">
			<div class="col-lg-12 text-center">
